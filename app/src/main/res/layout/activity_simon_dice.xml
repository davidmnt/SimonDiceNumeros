<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimonDice">

    <Button
        android:id="@+id/btn_cero"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="0"
        android:textSize="70sp"
        android:layout_margin="30dp"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_uno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_uno"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="1"
        android:textSize="70sp"
        android:layout_margin="30dp"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn_cero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/Puntos"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Puntuacion = ?"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_uno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>